{% extends 'base.html.twig' %}

{% block title %}Player index{% endblock %}

{% block body %}
    <h1>Player index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PlayerName</th>
                <th>DateOfRegistration</th>
                <th>In the hangar</th>
                <th>Number of battles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for Player in Players %}
            <tr>
                <td>{{ Player.id }}</td>
                <td>{{ Player.PlayerName }}</td>
                <td>{{ Player.dateOfRegistration }}</td>
                <td>{% for PlayerTank in Player.PlayerTanks %}
                    {{PlayerTank}} 
                {%endfor%}
                </td>
                <td>{{ countOfBattles[Player.id] }}</td>
                <td>
                    <a href="{{ path('app_Player_show', {'id': Player.id}) }}">show</a>
                    <a href="{{ path('app_Player_edit', {'id': Player.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_Player_new') }}">Create new</a>
{% endblock %}
